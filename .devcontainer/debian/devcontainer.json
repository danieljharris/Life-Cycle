{
  "name": "Hytale",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "runArgs": ["--network=host"],
  "features": {
    "ghcr.io/devcontainers/features/java:1": {},
    "ghcr.io/balazs23/devcontainers-features/bazel:1": {}
  },
  "customizations": {
    "jetbrains": {
      "backend": "IntelliJ"
    },
    "vscode": {
      "extensions": [
        "vscode.git",
        "Gruntfuggly.todo-tree",
        "guw.bazel-eclipse-vscode",
        "chouzz.vscode-better-align",
        "GitHub.copilot-chat",
        "BazelBuild.vscode-bazel",
        "redhat.java",
        "vscjava.vscode-java-pack"
      ]
    }
  },
  "remoteUser": "root",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "chmod +x /workspace/.devcontainer/install-dependencies.sh && /workspace/.devcontainer/install-dependencies.sh",
  "mounts": [
    "source=${localWorkspaceFolder}/.local-assets,target=/workspace/.local-assets,type=bind,consistency=cached"
  ]
}